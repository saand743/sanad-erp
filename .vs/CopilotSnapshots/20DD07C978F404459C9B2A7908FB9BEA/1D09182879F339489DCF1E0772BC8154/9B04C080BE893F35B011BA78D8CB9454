apiVersion: apps/v1
kind: Deployment
metadata:
  name: sanad-erp-app
spec:
  replicas: 2
  selector:
    matchLabels:
      app: sanad-erp-app
  template:
    metadata:
      labels:
        app: sanad-erp-app
    spec:
      containers:
      - name: sanad-erp-app
        image: sanad-erp-app:latest
        ports:
        - containerPort: 3000
        env:
        - name: NODE_ENV
          value: "production"
        - name: DATABASE_URL
          value: "postgres://postgres:postgres@sanad-erp-db:5432/sanad_erp"
---
apiVersion: v1
kind: Service
metadata:
  name: sanad-erp-service
spec:
  selector:
    app: sanad-erp-app
  ports:
    - protocol: TCP
      port: 80
      targetPort: 3000
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: sanad-erp-db
spec:
  replicas: 1
  selector:
    matchLabels:
      app: sanad-erp-db
  template:
    metadata:
      labels:
        app: sanad-erp-db
    spec:
      containers:
      - name: sanad-erp-db
        image: postgres:15
        env:
        - name: POSTGRES_DB
          value: "sanad_erp"
        - name: POSTGRES_USER
          value: "postgres"
        - name: POSTGRES_PASSWORD
          value: "postgres"
        ports:
        - containerPort: 5432
---
apiVersion: v1
kind: Service
metadata:
  name: sanad-erp-db-service
spec:
  selector:
    app: sanad-erp-db
  ports:
    - protocol: TCP
      port: 5432
      targetPort: 5432
